@page
@model IndexModel
@{
    ViewData["Title"] = "Homepage";
}

<div class="main-wrapper">
    <div class="text-center">
        <h3>Welcome
        @if (User.Identity != null && User.Identity.IsAuthenticated)
            { @User.Identity.Name }
        else
            { <span>guest</span> }
        </h3>
    </div>

    @if (Model.Auctions != null && Model.Auctions.Count > 0)
    {
        <div>
            <h2 style="padding-bottom: 10px">Auctions occurring</h2>
            <div class="sort-container">
                <label for="sort">Sort By: </label>
                <select id="sort">
                    <option value="date">Ending Time</option>
                    <option value="name">Product Name</option>
                    <option value="price">Product Price</option>
                </select>
            </div>
            <ul>
                @foreach (var auction in Model.Auctions)
                {
                    var auctionDict = auction as Dictionary<string, object>;
                    if (auctionDict != null)
                    {
                        <li>
                            <p>
                                <a href="/auction?id=@auctionDict["AuctionId"]">@auctionDict["ProductName"]</a>
                                - @($"{auctionDict["ProductPrice"]:0.00}€")
                                - @auctionDict["EndTime"]
                            </p>
                        </li>
                    }
                }
            </ul>
        </div>
    }
    else
    {
        <h2>No auctions to display.</h2>
    }
</div>
