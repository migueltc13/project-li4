@page
@model IndexModel
@{
    ViewData["Title"] = "Homepage";
}

<div class="main-wrapper">
    <div class="text-center">
        <h3 class="display-4">Welcome
        @if (User.Identity != null && User.Identity.IsAuthenticated)
            { @User.Identity.Name }
        else
            { <span>guest</span> }
        </h3>
    </div>

    @if (Model.Auctions != null)
    {
        <div>
            <h2>Auctions decurring</h2>

            <ul>
                @foreach (var auction in Model.Auctions)
                {
                    var auctionDictionary = auction as Dictionary<string, object>;
                    if (auctionDictionary != null)
                    {
                        <li>
                            <p>
                                <a href="/auction?id=@auctionDictionary["AuctionId"]">@auctionDictionary["ProductName"]</a>
                                - @auctionDictionary["ProductPrice"]€
                                - @auctionDictionary["EndTime"]
                            </p>
                        </li>
                    }
                }
            </ul>
        </div>
    }
</div>