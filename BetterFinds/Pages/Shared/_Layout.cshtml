@{
    // Get the page name from PageContext
    var pageName = Context.GetRouteValue("page");
    Console.WriteLine(pageName);
    // Don't load header in /Login and /Register pages
    bool LoadHeader = (pageName != null) ? !(pageName.ToString() == "/Login" || pageName.ToString() == "/Register") : true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatiable" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | BetterFinds</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
</head>
<body>
    @if (LoadHeader) {
        <header>   
            <nav>
                <a href="">BetterFinds</a>
                @if (User.Identity != null && User.Identity.IsAuthenticated) {
                    <a href="/logout">Logout</a> 
                }
                else {
                    <a href="/login">Login</a>
                    <a href="/register">Register</a>
                }
            </nav>
        </header>
    }
    else {
        <style>
            body {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                width: 100%;
            }
        </style>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- TODO Add footer -->
    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 | BetterFinds
        </div>
    </footer>
    -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>